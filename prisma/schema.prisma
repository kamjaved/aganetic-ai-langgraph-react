generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String
  city          String
  country       String
  jobTitle      String
  department    String
  salary        Float
  currency      String   @default("USD")
  remotePercent Int      @default(100)
  joinedAt      DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Message {
  id          String   @id @default(uuid())
  text        String
  sender      String  
  threadId    String
  username    String
  timestamp   DateTime @default(now())
  isMarkdown  Boolean  @default(false)
  userRole    String?
}
